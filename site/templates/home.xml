<?xml version="1.0" encoding="UTF-8"?>
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<cms:module name="head_tag" action="show"/>
		</head>

		<body>
			<section id="info">
				<!-- page image -->
				<cms:module
					name="gallery"
					action="show_image"
					text_id="page_image"
					/>

				<!-- info article -->
				<cms:module
					name="articles"
					action="show"
					text_id=""
					template="kodkod/articles/generic.xml"
					kodkod:type="articles"
					/>
			</section>
			<section id="contact">
				<cms:module
					name="contact_form"
					action="show"
					text_id=""
					template="kodkod/contact_form/generic.xml"
					kodkod:type="contact_form"
					/>

					<figure class="logo"/>
			</section>
			<footer>
				<div id="vehicle_stats">
					<cms:module
						name="articles"
						action="show"
						text_id=""
						template="kodkod/articles/generic.xml"
						kodkod:type="articles"
						/>

					<cms:module
						name="links"
						action="show"
						text_id="home_page_link"
						template="parts/home_page_link.xml"
						/>
				</div>
				<!-- Copyright -->
				<cms:template file="stock/copyright.xml">
					<param name="holder" value="copyright_holder"/>
					<param name="text" value="copyright_text"/>
					<param name="light" value=""/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>
